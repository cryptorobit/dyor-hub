    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "pnpm tsx ./node_modules/typeorm/cli.js migration:generate -d ./src/datasource.ts ./src/migrations/auto",
    "migration:run": "pnpm tsx ./node_modules/typeorm/cli.js migration:run -d ./src/datasource.ts",
    "migration:revert": "pnpm tsx ./node_modules/typeorm/cli.js migration:revert -d ./src/datasource.ts",
    "migration:clear": "rm -rf ./src/migrations/*",
    "db:drop": "pnpm tsx ./src/scripts/drop-database.ts"
  },
