{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "migrations/*.ts",
        "outDir": "dist/src"
      },
      {
        "include": "scripts/*.ts",
        "outDir": "dist/src"
      },
      {
        "include": "scripts/*.js",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
